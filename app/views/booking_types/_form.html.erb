<%= form_with model: @booking_type, local: true, data: { turbo: false }  do |form| %>
  <% if @booking_type.errors.any? %>
  <div class= "alert alert-danger">
    <% @booking_type.errors.full_messages.each do |message| %>
      <div><%= message %></div>
  <% end %>
  </div>
  <% end %>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.text_field :category, class:"form-control text-center" %>
  </div>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location , class:"form-control text-center"%>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class:"form-control text-center" %>
  </div>

 
  <div>
  <% if Current.user %>
    User ID: <b><%= Current.user.id %></b>

 
    <%= form.hidden_field :user_id, :value => Current.user.id%>
  <% end %>
  </div>


    <%= form.submit %>
  </div>
<% end %>
