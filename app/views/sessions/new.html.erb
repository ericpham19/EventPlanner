<h1> Sign In</h1>

<%= form_with url: sign_in_path, local: true, data: { turbo: false } do |form| %>
    <div class:"position-absolute top-50 start-50">
    <div class= "mb-3">
    <%= form.label :email %>
    <%= form.text_field :email , class: "form-control", placeholder:"ericpham@junkmail.com" %>
    </div>   
    <div class= "mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder:"password" %>
     </div>
     </div>
     <div class= "mb-3 ">
     <%= form.submit "Sign in", class: "btn btn-primary btn-lg "%>
     </div>
     </div>
<% end %>
